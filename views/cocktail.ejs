<%- include('partials/header', {
    title: 'Détail cocktail'
}) %>

<body>
    <header>
        <div class="header">
            <img src="https://www.neondesigns.nl/media/neon-catalog-teaser.jpg" alt="logo cocktail" class="logo">
            <h1 class= "title-header">MAKE YOUR COCKTAIL</h1>
            <nav>
                <a href="/">Cocktails</a>
                <a href="/type/<%= cocktail.type %>">Types de cocktails</a>
          </nav>
        </div>
    </header>

    
        <div class="recette">
            <h1><%= cocktail.name.toUpperCase() %></h1>
            <img src="<%= cocktail.img %>" alt="<%= cocktail.name %>" class="image">
            <h2>Type :</h2>
            <h3><%= cocktail.type %></h3>
            <h2>Ingrédients :</h2>
            <div class="ingredients">
                <ul> 
                    <% cocktail.ingredients.forEach(element => { %>
                        <li><%= element %></li>
                    <% }); %>
                </ul> 
            </div>
            <h2>Tags :</h2>
            <ul> 
                <% cocktail.tags.forEach(element => { %>
                    <li><%= element %></li>
                <% }); %>
            </ul> 
        </div>


<%- include('partials/footer') %>
